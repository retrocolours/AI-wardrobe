@model IEnumerable<ProductVM>
@using AI_Wardrobe.ViewModels;
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Products</h2>
<div id="cart-message" style="display: none; padding: 10px; background-color: lightgreen; color: darkgreen;"></div>

<div class="product-list">
    @foreach (var item in Model)
    {
        <div class="product">
            <div class="product-image-container">
                <img class="product-image" src="@item.ImageUrl" alt="@item.Description"/>
            </div>
            <div class="product-details">
                <h3 class="product-name">@item.Name</h3>
                <div class="product-description-container">
                    <p class="product-title">@item.Description</p>
                    <button class="read-more-btn">Read More</button>
                </div>
                <p class="product-price">@item.Price?.ToString("0.00")</p>
                <button class="btn btn-primary add-to-cart" data-product-id="@item.Id" data-product-image="@item.ImageUrl" 
                        data-product-name="@item.Name"
                        data-product-price="@(item.Price.HasValue ? item.Price.Value.ToString("0.00") : "0")"
                        data-product-currency="@item.Price">
                    Add to Cart
                </button>
            </div>
        </div>
    }
</div>

<a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-secondary">Go to Cart</a>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".add-to-cart").click(function () {
                let productId = $(this).data("product-id");
                let productImage = $(this).data("product-image");
                let productName = $(this).data("product-name");
                let price = parseFloat($(this).data("product-price")) || 0;

                $.ajax({
                    url: "/shopping-cart/add",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({ productId, productImage, productName, price }),
                    success: function (response) {
                        console.log("Cart updated:", response);
                        $("#cart-message").text(response.message).fadeIn().delay(2000).fadeOut();
                    },
                    error: function (xhr) {
                        alert("Error: " + (xhr.responseJSON?.message || "Something went wrong."));
                    }
                });
            });

            $(".read-more-btn").click(function() {
                const description = $(this).siblings('.product-title');
                const isExpanded = description.hasClass('expanded');
                
                if (isExpanded) {
                    description.removeClass('expanded');
                    $(this).text('Read More');
                } else {
                    description.addClass('expanded');
                    $(this).text('Read Less');
                }
            });
        });
    </script>

    <style>
        #cart-message {
            width: 100vw;
            position: fixed;
            bottom: 16px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        .product-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
            padding: 20px;
            margin: 0 auto;
        }

        .product {
            display: flex;
            flex-direction: column;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            height: 100%;
            width: 100%;
            margin: 0 auto;
        }

        .product-image-container {
            width: 100%;
            height: 500px;
            overflow: hidden;
        }

        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-details {
            padding: 15px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .product-name {
            font-size: 1.2rem;
            margin-bottom: 8px;
            height: 2.4em;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .product-description-container {
            position: relative;
            margin-bottom: 8px;
        }

        .product-title {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 8px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .product-title.expanded {
            -webkit-line-clamp: unset;
        }

        .read-more-btn {
            background: none;
            border: none;
            color: #007bff;
            padding: 0;
            font-size: 0.9rem;
            cursor: pointer;
            margin-top: 4px;
        }

        .read-more-btn:hover {
            text-decoration: underline;
        }

        .product-price {
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .add-to-cart {
            margin-top: auto;
        }
    </style>
}
