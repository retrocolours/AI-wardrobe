@Model AI_Wardrobe.ViewModels.MyProfileVM

@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="~/css/home.css" />

<h1>My Profile</h1>
<p>Welcome to your profile, @User.Identity?.Name!</p>

<div class="profile-container">
    <h2>Personal Information</h2>
    <div class="info-box">
        <form>
            <div class="input-row">
                <div class="input-group">
                    <label for="first-name">First Name</label>
                    <input type="text" id="first-name" name="first-name" value=@Model.FirstName disabled />
                </div>
                <div class="input-group">
                    <label for="last-name">Last Name</label>
                    <input type="text" id="last-name" name="last-name" value=@Model.LastName disabled />
                </div>
            </div>
            <div class="input-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" value="@Model.Address" disabled />
            </div>
            <div class="input-group">
                <label for="apartment">Apartment, Suite (Optional)</label>
                <input type="text" id="apartment" name="apartment" value="@Model.Apartment" disabled />
            </div>
            <div class="input-row">
                <div class="input-group">
                    <label for="city">City</label>
                    <input type="text" id="city" name="city" value="@Model.City" disabled />
                </div>
                <div class="input-group">
                    <label for="province">Province</label>
                    <input type="text" id="province" name="province" value="@Model.Province" disabled />
                </div>
                <div class="input-group">
                    <label for="postal-code">Postal Code</label>
                    <input type="text" id="postal-code" name="postal-code" value="@Model.PostalCode" disabled />
                </div>
            </div>
            <div class="input-group">
                <label for="phone">Phone (Optional)</label>
                <input type="text" id="phone" name="phone" value="@Model.Phone" disabled />
            </div>
            <button type="button" class="btn black-btn">Edit | Save</button>
        </form>
    </div>

    <h2>Account Information</h2>
    <form>
        <div class="input-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" value="@Model.Email" disabled />
        </div>
        <button type="button" class="btn black-btn">Change Password</button>
    </form>
</div>