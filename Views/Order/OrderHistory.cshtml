@model IEnumerable<AI_Wardrobe.ViewModels.OrderVM>

<h1>Order History</h1>

<div class="list-container">
    @if (Model == null || !Model.Any())
    {
        <p>You don't have any orders yet.</p>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="order-container">
                <div class="image-container">
                    @for (int i = 0; i <= 4 && i < item.Images.Count; i++)
                    {
                        <img class="order-image" src=@item.Images[i] alt="Product Photo" />
                    }
                </div>
                <div class="detail-container">
                    <h3>Order# @item.Id</h3>
                    <h5>@item.Status</h5>
                </div>
                <div class="action-container">
                    <button class="btn btn-primary">View Items</button>
                    <button class="btn btn-primary">More Details...</button>
                </div>
            </div>
        }
    }
</div>

<style>

    .order-container {
        width:95%;
        max-width:1400px;
        display: flex;
        justify-content: space-between;
        margin: auto;
        align-items: center;
        border-bottom: 1px solid #686565;
    }

    .image-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr)); /* Responsive grid */
        grid-template-rows: repeat(2, 1fr); /* Max 2 rows */
        width: 200px;
        height: 200px;
        overflow: hidden;
        margin: 10px;
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .action-container, .detail-container {
        display:flex;
        flex-flow: column;
        align-content: space-evenly;
    }
</style>