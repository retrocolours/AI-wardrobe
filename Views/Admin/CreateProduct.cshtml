@model AI_Wardrobe.ViewModels.ProductVM

@{
    ViewData["Title"] = "CreateProduct";
}

<h1>Add Product</h1>

<div class="row container">
    <div class="col-md-4">
        <h4>Product Image</h4>
        <img class="img-fluid" id="img-image" src="" style="max-height: 100%; width: auto; object-fit: contain;" />
        <div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#imageBrowserModal">Browse</button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadImageModal">Upload</button>
        </div>
    </div>

    <div class="col-md-4">
        <form asp-action="CreateProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" id="input-image" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenderId"></label>
                <select asp-for="GenderId" asp-items="Model.GenderOptions"
                        class="form-control" default="-1"></select>
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SizeId"></label>
                <select asp-for="SizeId" asp-items="Model.SizeOptions"
                        class="form-control" default="-1"></select>
                <span asp-validation-for="SizeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeId"></label>
                <select asp-for="TypeId" asp-items="Model.TypeOptions"
                        class="form-control" default="-1"></select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to Admin Page</a>
    </div>
</div>


@Html.Partial("_ImageBrowser", new string[] { "input-image", "img-image" })

@Html.Partial("_ImageUpload", new string[] { "input-image", "img-image" })

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<style>
    .container {
        width: 95%;
        max-width: 1400px;
        margin: auto;
    }

    #img-image {
        height: 500px;
        width: auto;
    }
</style>