@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ai Wardrobe - Home</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
<link href="~/css/home.css" rel="stylesheet" type="text/css" />
</head>
<body>
 
    

    <!-- Main Banner Section -->
    <section class="main-banner">
        <div class="banner-text">
            <h2>Take Control of your Style</h2>
            <p>Let Ai Wardrobe Lead the Way</p>
            <button class="cta-btn">Shop All Collections</button>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="categories">
        <div class="category">
            <img src="women-coats.jpg" alt="Women's Coats">
            <button class="shop-btn">Shop Now</button>
        </div>
        <div class="category">
            <img src="mens-coats.jpg" alt="Men's Coats">
            <button class="shop-btn">Shop Now</button>
        </div>
        <div class="category">
            <img src="unisex.jpg" alt="Unisex">
            <button class="shop-btn">Shop Now</button>
        </div>
        <div class="category">
            <img src="collections.jpg" alt="Collections">
            <button class="shop-btn">Shop Now</button>
        </div>
    </section>

    <!-- Trending Now Section -->
    <section class="trending-now">
        <h3>Trending Now</h3>
        <div class="product">
            <img src="product1.jpg" alt="Space Saviour Female">
            <p>Space Saviour Female - $1099</p>
        </div>
        <div class="product">
            <img src="product2.jpg" alt="Nomad Fashion Unisex Orange">
            <p>Nomad Fashion Unisex Orange - $1299</p>
        </div>
        <div class="product">
            <img src="product3.jpg" alt="Monk Coat Orange Prime">
            <p>Monk Coat Orange Prime - $499</p>
        </div>
        <div class="product">
            <img src="product4.jpg" alt="Neon People Coat">
            <p>Neon People Coat - $599</p>
        </div>
    </section>

    
</body>
</html>
