@model List<AI_Wardrobe.ViewModels.ProductVM>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Main Banner Section -->
<section class="main-banner">
    <div class="banner-text">
        <h2>Take Control of your Style</h2>
        <p>Let Ai Wardrobe Lead the Way</p>
        <a asp-controller="Shop" asp-action="Index"><button class="cta-btn" >Shop All Collections</button></a>
    </div>
</section>

<!-- Categories Section -->
<section class="categories">
    <div class="category">
        <img src="./images/products/-14.webp" alt="Women's Coats">
        <h4>Women's Coats</h4>
        <button class="shop-btn">Shop Now</button>
    </div>
    <div class="category">
        <img src="./images/products/guy_wearing_fashion_clothes__futuristic_style_by_coolarts223_dg0wso7-fullview.webp"
            alt="Men's Coats">
        <h4>Men's Coats</h4>
        <button class="shop-btn">Shop Now</button>
    </div>
    <div class="category">
        <img src="~/images/products/-10.webp" alt="Unisex">
        <h4>Unisex</h4>
        <button class="shop-btn">Shop Now</button>
    </div>
    <div class="category">
        <img src="~/images/products/87ed0e2556f4bdcfac37c01663ccc515.webp" alt="Collections">
        <h4>Collections</h4>
        <button class="shop-btn">Shop Now</button>
    </div>
</section>

<!-- Featured Products Section -->
<section class="trending-now">
    <h3>Featured Products</h3>
    <div class="product-container">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="product">
                    <img class="img-fluid" id="img-image" src=@item.ImageUrl />
                    <h5>@item.Name</h5>
                    <p class="price">$@item.Price</p>
                    <a href="/Shop/Details/@item.Id" class="view-btn">View Details</a>
                </div>
            }
        }
        else
        {
            <p>No products available at the moment.</p>
        }
    </div>
</section>

<link rel="stylesheet" href="~/css/image.css" />
<style>
    .main-banner {
        height: 800px;
        width: 100%;
        background-size: 100% auto;
        background-position: center 30%;
        background-repeat: no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
    }

    .product {
        padding: 15px;
        border-radius: 5px;
        transition: transform 0.3s ease;
        width: 100%;
        max-width: 250px;
    }

    .product:hover {
        transform: translateY(-5px);
    }

    .product img {
        margin-bottom: 16px;
        width: 100%;
        height: 100%;
        max-height: 400px;
        object-fit: cover;
        object-position: top;
    }

    .category {
        position: relative;
        overflow: hidden;
        margin: 10px;
        padding-bottom: 20px;
    }

    .category img {
        width: 100%;
        height: 400px; /* Fixed height */
        object-fit: cover;
        object-position: top; /* Changed from center to top */
        transition: transform 0.3s ease;
    }

    .category:hover img {
        transform: scale(1.05);
    }

    .price {
        font-weight: bold;
        color: #d94c1a;
    }
</style>